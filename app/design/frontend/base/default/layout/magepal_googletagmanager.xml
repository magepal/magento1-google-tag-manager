<layout version="0.1.0">

<!--
Default layout, loads most of the pages
-->

    <default>
        <reference name="head">
            <block type="googletagmanager/gtmCode" name="gtm_head_code" as="gtm_head_code" template="magepal/googletagmanager/gtm_head_code.phtml" output="toHtml"/>
        </reference>
        <reference name="after_body_start">
            <block type="googletagmanager/tm" name="magepal_gtm_datalayer" as="magepal_gtm_datalayer" template="magepal/googletagmanager/data_layer.phtml" />
            <block type="googletagmanager/gtmCode" name="gtm_code" as="gtm_code" template="magepal/googletagmanager/gtm_code.phtml" />
        </reference>
    </default>
</layout>
